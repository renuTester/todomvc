{
	"name": "todomvc",
	"version": "1.0.0",
	"description": "UI Testing of ToDo MVC App",
	"main": "index.js",
	"scripts": {
		"setup": "git checkout main && npm install --silent",
		"test-cy-chrome": "node cypress_runner.ts --browser chrome --config-file cypress.config.ts --spec && echo Testing complete!",
		"test-cy-fox": "node cypress_runner.ts --browser firefox --config-file cypress.config.ts --spec && echo Testing complete!",
		"code-quality-win": "npm run knip-test & npm run snyk-test & npm run lint-test & npm run prettier-test & npm run spell-test",
		"code-quality-mac": "npm run knip-test; npm run snyk-test; npm run lint-test; npm run prettier-test; npm run spell-test",
		"code-auto-fix": "npm run lint-auto-fix && npm run prettier-auto-fix",
		"merge_junit_reports": "junit-merge -d junit_report -o junit_report/merged.xml",
		"lint-test": "eslint --ignore-pattern node_modules/",
		"prettier-test": "prettier --log-level silent --check .",
		"knip-test": "knip",
		"snyk-test": "snyk test --dev --severity-threshold=critical",
		"spell-test": "cspell **/* --no-must-find-files",
		"lint-auto-fix": "eslint --fix --ignore-pattern node_modules/",
		"prettier-auto-fix": "prettier --log-level silent --write .",
		"nuke": "git clean -xdf; npm install",
		"open-report-win": "start ./mochawesome-report/mochawesome.html",
		"open-report-linux": "xdg-open cypress/mochawesome-report/mochawesome.html",
		"open-report-mac": "open cypress/mochawesome-report/mochawesome.html",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=18"
	},
	"keywords": [
		"UI",
		"Test",
		"Automation"
	],
	"author": "Yadav",
	"license": "ISC",
	"devDependencies": {
		"@cypress-audit/lighthouse": "^1.4.2",
		"@eslint/js": "^9.17.0",
		"@typescript-eslint/eslint-plugin": "^8.19.0",
		"@typescript-eslint/parser": "^8.19.0",
		"axe-core": "^4.10.2",
		"cspell": "^8.3.2",
		"cypress": "13.17.0",
		"cypress-axe": "^1.5.0",
		"cypress-multi-reporters": "^1.2.4",
		"cypress-plugin-tab": "^1.0.5",
		"cypress-tags": "^1.2.2",
		"eslint": "^9.17.0",
		"geckodriver": "^5.0.0",
		"globals": "^15.14.0",
		"husky": "^9.0.11",
		"junit-merge": "^2.0.0",
		"knip": "^5.41.1",
		"lint-staged": "^13.2.2",
		"mocha": "^7.1.1",
		"mocha-junit-reporter": "^1.23.3",
		"mochawesome": "^5.0.0",
		"mochawesome-merge": "^4.0.3",
		"mochawesome-report-generator": "^4.1.0",
		"npm": "^6.14.4",
		"prettier": "^3.4.2",
		"snyk": "^1.1294.3",
		"typescript": "^5.0.4",
		"typescript-eslint": "^8.19.0",
		"yargs": "^15.3.1"
	}
}
